{% extends "base.html" %}
{% block content %}
<div class="container my-4">
  <h2 class="mb-3">Кабинет участка</h2>
  <ul class="nav nav-tabs mb-3">
    <li class="nav-item"><a class="nav-link {{ 'active' if tab=='works' else '' }}" href="/cabinet/?tab=works">Рабочие документы</a></li>
    <li class="nav-item"><a class="nav-link {{ 'active' if tab!='works' else '' }}" href="/cabinet/?tab=refs">Справочники</a></li>
  </ul>
  <div class="row g-3">
    {% for it in items %}
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ it.name }}</h5>
            <p class="text-muted flex-grow-1">Открыть параметры и сформировать.</p>
            <a class="btn btn-primary mt-auto" href="{{ it.href }}">Открыть</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
